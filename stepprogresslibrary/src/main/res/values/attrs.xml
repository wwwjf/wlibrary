<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->

    <declare-styleable name="FlowViewHorizontal">
        <attr name="h_bg_radius" format="dimension" />
        <attr name="h_pro_radius" format="dimension" />
        <attr name="h_bg_width" format="dimension" />
        <attr name="h_bg_color" format="color" />
        <attr name="h_pro_width" format="dimension" />
        <attr name="h_pro_color" format="color" />
        <attr name="h_text_padding" format="dimension" />
        <attr name="h_time_padding" format="dimension" />
        <attr name="h_max_step" format="integer" />
        <attr name="h_textsize" format="dimension" />
        <attr name="h_pro_step" format="integer" />
    </declare-styleable>

    <declare-styleable name="StepProgressView">
        <attr name="spv_textSize" format="reference|dimension" />
        <attr name="spv_textPaddingTop" format="reference|dimension" />
        <attr name="spv_textColor" format="reference|color" />
        <attr name="spv_lineColor" format="reference|color" />
        <attr name="spv_lineProgressColor" format="reference|color" />
        <attr name="spv_lineWidth" format="reference|dimension" />
        <attr name="spv_circleInnerRadius" format="reference|dimension" />
        <attr name="spv_circleInnerColor" format="reference|color" />
        <attr name="spv_circleOutRadius" format="reference|dimension" />
        <attr name="spv_circleOutColor" format="reference|color" />
        <attr name="spv_circleOutFinishColor" format="reference|color" />
        <attr name="spv_circleProgressOutColor" format="reference|color" />
        <attr name="spv_circleStrokeWidth" format="reference|dimension" />
        <attr name="spv_maxStep" format="reference|integer" />
        <attr name="spv_progress" format="reference|integer" />
        <attr name="spv_progressText" format="reference|string" />
    </declare-styleable>
</resources>
